CAPI=2:
name: "ORG:socet:%:1.0.0"
description: ""

filesets:
    rtl:
        files:
            - "source/%.sv"
        file_type: systemVerilogSource
        # depend:
        #     - "fusesoc:core:name"

    synth:
        depend:
            - "socet:tech:AMI_05_LIB"
            - "ORG:socet:%_syn"

    tb:
        files:
            - "testbench/tb_%.sv"
            - "waves/%.do": { file_type: user }
            - "waves/%.gtkw": { file_type: user }
            # - "data/file.txt": { file_type: user }
        file_type: systemVerilogSource

    synfiles:
        depend:
            - "ORG:socet:synfiles"

targets:
    default: &default
        filesets:
            - rtl
        toplevel: %

    sim: &sim
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        toplevel: tb_%
        tools:
            modelsim:
                vsim_options:
                    - -vopt
                    - -voptargs='+acc'
                    - -t ps
                    - -do waves/%.do
                    - -onfinish stop
                    - -do "set PrefSource(OpenOnFinish) 0 ; set PrefMain(LinePrefix) \"\" ; set PrefMain(colorizeTranscript) 1"
                    - -coverage
                vlog_options:
                    - +cover
            verilator:
                verilator_options:
                    - --cc
                    - --trace
                    - --main
                    - --timing
                    - --coverage
                make_options:
                    - -j

    lint:
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        tools:
            verilator:
                mode: lint-only
                verilator_options:
                    - --timing
                    - -Wall

    syn:
        <<: *default
        filesets_append:
            - synfiles
        default_tool: design_compiler
        toplevel: %
        tools:
            design_compiler:
                script_dir: "src/ORG_socet_synfiles_0"
                dc_script: "synth.tcl"
                report_dir: "reports"
                target_library: "/home/ecegrid/a/socet/summer24-refactor/tech/ami05/osu05_stdcells.db"
                link_library: "/home/ecegrid/a/socet/summer24-refactor/tech/ami05/osu05_stdcells.db dw_foundation.sldb"

    syn_sim:
        <<: *sim
        filesets:
            - synth
            - tb

